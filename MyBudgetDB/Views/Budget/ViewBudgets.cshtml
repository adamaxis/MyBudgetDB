@model IEnumerable<MyBudgetDB.Models.BudgetCommands.UserBudgetBrief>

@{
    ViewData["Title"] = "Budgets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="table-responsive">
    <table class="table table-striped recipe">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ElementAt(0).Owner)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ElementAt(0).Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ElementAt(0).Amount)
                </th>
                <th>
                        Balance
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ElementAt(0).CreationDate)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                @Html.HiddenFor(modelItem => item.Id)
                <td>
                    @Html.DisplayFor(modelItem => item.Owner)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <th>
                    $@Html.DisplayFor(model => item.Amount)
                </th>
                <th>
                    $@item.GetBalance()
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    <a asp-action="ViewBudget" asp-route-id="@item.Id" class="btn">View</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<a asp-action="CreateBudget" class="btn btn-success">Create New Budget</a>