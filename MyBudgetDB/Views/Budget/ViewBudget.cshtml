@model MyBudgetDB.Models.BudgetCommands.UserBudgetDetails

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<h3>Budget Info</h3>
<div class="table-responsive">
    <table class="table table-striped recipe">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Owner)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Balance)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.Owner)</td>
                <td>@Html.DisplayFor(model => model.Amount)</td>
                <td>@Html.DisplayFor(model => model.Balance)</td>
            </tr>
    </table>
    <hr />
    <h3>Expenses</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Expenses.ElementAt(0).Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Expenses.ElementAt(0).Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Expenses.ElementAt(0).DateAdded)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Expenses)
            {
                <tr>
                    <td>@Html.DisplayFor(model => item.Name)</td>
                    <td>@Html.DisplayFor(model => item.Amount)</td>
                    <td>@Html.DisplayFor(model => item.DateAdded)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-action="EditBudget" asp-route-id="@Model.Id" class="btn btn-success">Edit budget</a>
