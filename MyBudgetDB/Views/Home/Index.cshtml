@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/coins.jpg" alt="ASP.NET" class="container-fluid" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img src="~/images/moneyjars.jpg" alt="Visual Studio" class="container-fluid" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img src="~/images/bitcoin.jpg" alt="Package Management" class="container-fluid" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img src="~/images/dollars.jpg" alt="Microsoft Azure" class="container-fluid" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <h1>Your Budget Report</h1>
    <div class="progress">
        <div class="progress-bar progress-bar-success" role="progressbar" style="width:40%">
            Rent + Bills
        </div>
        <div class="progress-bar progress-bar-warning" role="progressbar" style="width:10%">
            Gas + Groceries
        </div>
        <div class="progress-bar" role="progressbar" style="width:20%">
            Other
        </div>
    </div>
</div>
<div class="row">
    <h2>You have <strong>30% ($200)</strong> of your budget remaining for November</h2>
</div>
